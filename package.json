{
  "name": "campus",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/configs/mikro-orm.config.ts",
      "./dist/configs/mikro-orm.config.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "/vue/**"
    ]
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build&&yarn run vite",
    "vite": "cd vue&&yarn run build",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "schema:initial": "mikro-orm schema:create --run",
    "schema:clean": "yarn mikro-orm schema:fresh --run&&mikro-orm seeder:run --class=ProdSeeder&&mikro-orm seeder:run --class=DevSeeder",
    "schema:update": "mikro-orm schema:update --run"
  },
  "dependencies": {
    "@mikro-orm/core": "^5.1.3",
    "@mikro-orm/mysql": "^5.1.4",
    "@mikro-orm/nestjs": "^5.0.1",
    "@mikro-orm/seeder": "^5.1.4",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.0.1",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/serve-static": "^3.0.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "jsdom": "^21.1.0",
    "jszip": "^3.10.1",
    "luxon": "^3.0.1",
    "nestjs-pino": "^3.1.1",
    "passport": "^0.6.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pino-http": "^8.2.0",
    "pino-pretty": "^9.4.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.1.3",
    "@mikro-orm/entity-generator": "^5.6.16",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/archiver": "^5.3.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/jsdom": "^21.1.0",
    "@types/luxon": "^3.0.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cache-loader": "^4.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
